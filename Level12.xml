<?xml version="1.0" encoding="utf-8"?>
<level xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../level.xsd">
  <levelInfo number="12">
    <name>
      <en>Feelings</en>
      <ar>
        <x>احاسيس</x>
        <r>ahasees</r>
      </ar>
      <de>Gefühle</de>
      <pl>Uczucia</pl>
      <es>Sentimientos</es>
    </name>
  </levelInfo>
  <steps>
    <step>
      <word wid="1201" type="word">
        <translations>
          <en>How do you feel?</en>
          <ar>
            <x>كيف تشعر؟</x>
            <r>kaifa tash'aur?</r>
          </ar>
          <de>Wie fühlen Sie sich?</de>
          <pl>Jak się czujesz?</pl>
          <es>¿Cómo te sientes?</es>
        </translations>
      </word>
    </step>
    <step>
      <word wid="1202" type="word">
        <translations>
          <en>I feel happy</en>
          <ar>
            <x>أشعر بالسعادة</x>
            <r>asha'auro bilsa'ada</r>
          </ar>
          <de>Ich fühle mich glücklich</de>
          <pl>Jestem szczęśliwy/szczęśliwa</pl>
          <es>Me siento feliz</es>
        </translations>
      </word>
    </step>
    <step>
      <word wid="1203" type="word">
        <translations>
          <en>I feel sad</en>
          <ar>
            <x>أشعر بالحزن</x>
            <r>asha'auro bilhozn</r>
          </ar>
          <de>Ich bin traurig</de>
          <pl>Jestem smutny/smutna</pl>
          <es>Me siento triste</es>
        </translations>
      </word>
    </step>
    <step>
      <word wid="1204" type="word">
        <translations>
          <en>I feel lucky</en>
          <ar>
            <x>أشعر بأنني محظوظ</x>
            <r>asha'aro bianani mahthouth</r>
          </ar>
          <de>Ich schätze mich glücklich</de>
          <pl>Jestem zadowolony/zadowolna</pl>
          <es>Me siento afortunado</es>
        </translations>
      </word>
    </step>
    <step>
      <multipleChoiceTest limitTestsBy="2">
        <choicesByRef>
          <choice ref="1203" />
          <choice ref="1204" />
          <choice ref="1202" />
        </choicesByRef>
      </multipleChoiceTest>
    </step>
    <step>
      <word wid="1206" type="word">
        <translations>
          <en>What are you doing?</en>
          <ar>
            <x>ماذا تفعل؟</x>
            <r>matha tafa'al?</r>
          </ar>
          <de>Was machen Sie?</de>
          <pl>Co robisz?</pl>
          <es>¿Qué estás haciendo?</es>
        </translations>
      </word>
    </step>
    <step>
      <word wid="1205" type="word">
        <translations>
          <en>at home</en>
          <ar>
            <x>في البيت</x>
            <r>fi albait</r>
          </ar>
          <de>zu Hause</de>
          <pl>W domu</pl>
          <es>en casa</es>
        </translations>
      </word>
    </step>
    <step>
      <word wid="1215" type="word">
        <translations>
          <en>On the beach</en>
          <ar>
            <x>على الشاطئ</x>
            <r>ala al shate'</r>
          </ar>
          <de>Am Strand</de>
          <pl>Na plaży</pl>
          <es>En la playa</es>
        </translations>
      </word>
    </step>
    <step>
      <word wid="1216" type="word">
        <translations>
          <en>In the mall</en>
          <ar>
            <x>في المركز التجاري</x>
            <r>fe almarkaz altijari</r>
          </ar>
          <de>Im Einkaufszentrum</de>
          <pl>W centrum handlowym</pl>
          <es>En el centro comercial</es>
        </translations>
      </word>
    </step>
    <step>
      <word wid="1207" type="word">
        <translations>
          <en>I am bored</en>
          <ar>
            <x>أشعر بالملل</x>
            <r>asha'auro bilmalal</r>
          </ar>
          <de>Ich bin gelangweilt</de>
          <pl>Jestem znudzony/znudzona</pl>
          <es>Estoy aburrido</es>
        </translations>
      </word>
    </step>
    <step>
      <word wid="1208" type="word">
        <translations>
          <en>I am enjoying my time.</en>
          <ar>
            <x>أنا أستمتع بوقتي</x>
            <r>ana astamti'au biwaqti</r>
          </ar>
          <de>Ich genieße meine Zeit.</de>
          <pl>Miło spędzam czas.</pl>
          <es>Estoy disfrutando de mi tiempo.</es>
        </translations>
      </word>
    </step>
    <step>
      <word wid="1209" type="word">
        <translations>
          <en>I am busy</en>
          <ar>
            <x>أنا مشغول</x>
            <r>ana mashghul</r>
          </ar>
          <de>Ich bin beschäftigt</de>
          <pl>Jestem zajęty/zajęta</pl>
          <es>Estoy ocupado</es>
        </translations>
      </word>
    </step>
    <step>
      <word wid="1210" type="word">
        <translations>
          <en>I am in the toilet</en>
          <ar>
            <x>أنا في المرحاض</x>
            <r>ana fi almirhad</r>
          </ar>
          <de>Ich bin auf der Toilette</de>
          <pl>Jestem w toalecie</pl>
          <es>Estoy en el servicio</es>
        </translations>
      </word>
    </step>
    <step>
      <word wid="1211" type="word">
        <translations>
          <en>I am out for lunch</en>
          <ar>
            <x>أنا خارج لتناول الغداء</x>
            <r>ana kharij-on litanaoul alghadaa</r>
          </ar>
          <de>Ich bin zum Mittagessen</de>
          <pl>Jestem na lunchu</pl>
          <es>He salido a comer fuera</es>
        </translations>
      </word>
    </step>
    <step>
      <multipleChoiceTest limitTestsBy="1">
        <choicesByRef>
          <choice ref="1209" />
          <choice ref="1210" />
          <choice ref="1211" />
        </choicesByRef>
      </multipleChoiceTest>
    </step>
    <step>
      <word wid="1212" type="word">
        <translations>
          <en>hurry!</en>
          <ar>
            <x>أسرع</x>
            <r>asri'a</r>
          </ar>
          <de>beeilen!</de>
          <pl>Pospiesz się!</pl>
          <es>¡Date prisa!</es>
        </translations>
      </word>
    </step>
    <step>
      <word wid="1213" type="word">
        <translations>
          <en>finally, it’s the weekend</en>
          <ar>
            <x>أخيرا، انها عطلة نهاية الأسبوع</x>
            <r>akhiran, inaha 'autlat nihayat alusbu'a</r>
          </ar>
          <de>Endlich ist es Wochenende</de>
          <pl>Nareszcie weekend!</pl>
          <es>por fin, es fin de semana</es>
        </translations>
      </word>
    </step>
